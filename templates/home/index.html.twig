{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bonjour {% if app.user %} {{ app.user.firstname }} {% endif %} ! ✅</h1>

    Choisir pour vous connecter:
    <ul>
        <li>Pour vous connecter avec un compte : <code><a href="{{ path('connect_google_start') }}">Google</a></code></li>
        <li>Pour vous connecter avec un compte : <code><a href="{{ path('connect_facebook') }}">Facebook</a></code></li>
        <li>Pour vous connecter avec un compte : <code><a href="{{ path('connect_linkedin') }}">Linkedin</a></code></li>
    </ul>

    {% if app.user %}
    <ul>
        <li> Connecter avec {% if app.user.facebookId %}Facebook {% endif %}
                            {% if app.user.googleId %}Google {% endif %}
                            {% if app.user.linkedinId %}Linkedin{% endif %} </li>
        <li>{{ app.user.lastname|upper }} {{ app.user.firstname }}</li>
        <li>{{ app.user.email }}</li>
        <li> <img src="{{ app.user.picture }}" alt="{{ app.user.lastname|upper }}"></li>
        
        <li>Pour vous déconnecter : <code><a href="{{ path('app_logout') }}">Déconnection</a></code></li>
    </ul>
    {% endif %}
</div>
{% endblock %}
